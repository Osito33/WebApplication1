@model WebApplication1.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<h4 class="alert alert-success">Agregar Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="AddProducto" asp-controller="Home" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <i class="fa-solid fa-barcode"></i>
                <label asp-for="NDC" class="control-label"></label>
                <input asp-for="NDC" class="form-control" />
                <span asp-validation-for="NDC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-pen"></i>
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-dollar-sign"></i>
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="1" min="1" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-cubes"></i>
                <label asp-for="Contenido" class="control-label"></label>
                <input asp-for="Contenido" class="form-control" />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-calendar-alt"></i>
                <label asp-for="Caducidad" class="control-label"></label>
                <input asp-for="Caducidad" class="form-control" />
                <span asp-validation-for="Caducidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-rotate-left"></i> Regresar
                </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

